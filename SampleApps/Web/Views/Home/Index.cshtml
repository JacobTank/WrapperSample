        <h5>Initialize the Wrapper</h5>

        <div id="editor">
            // Created in the constructor
            _api = PowerServiceClientFactory.CreateAsync(
                new Uri(_configuration["mp.ApiBaseUrl"]),
                _configuration["mp.client"],
                _configuration["mp.secret"]).Result;

            // Created elsewhere with await
            _api = await PowerServiceClientFactory.CreateAsync(
                new Uri(_configuration["mp.ApiBaseUrl"]),
                _configuration["mp.client"],
                _configuration["mp.secret"]);
        </div>   
</div>